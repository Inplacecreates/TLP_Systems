    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.3",
    "babel-jest": "^29.6.2",
    "eslint": "^8.45.0",
